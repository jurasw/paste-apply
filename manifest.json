{
  "manifest_version": 3,
  "name": "Paste Apply - Job Application Auto-Fill",
  "version": "1.0.1",
  "description": "Automatically fill job application forms with your saved information",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icons/logo.png",
      "48": "src/icons/logo.png",
      "128": "src/icons/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "src/icons/logo.png",
    "48": "src/icons/logo.png",
    "128": "src/icons/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/lib/pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "fill-form": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Fill job application form"
    }
  }
}

